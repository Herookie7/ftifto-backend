{
  "name": "ftifto-backend",
  "version": "1.0.0",
  "description": "Unified REST API for Tifto admin, customer, seller, and rider applications.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "test": "jest",
    "verify": "node scripts/verifyDeployment.js",
    "seed": "node scripts/seed.js",
    "setup": "npm install && npm run seed && npm run verify && npx open-cli http://localhost:8001/status",
    "docs:build": "node scripts/buildDocs.js",
    "pre-release": "node scripts/preReleaseCheck.js",
    "metrics:export": "node scripts/exportMetrics.js",
    "clean": "node scripts/clean.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:list": "node scripts/migrate.js list",
    "backup:create": "node scripts/backupMongo.js",
    "backup:restore": "node scripts/restoreMongo.js",
    "backup:verify": "node scripts/verifyBackup.js",
    "audit": "npm audit --audit-level=high",
    "audit:fix": "npm audit fix --audit-level=high",
    "retention:run": "node scripts/runDataRetention.js",
    "compliance": "node scripts/auditSecrets.js",
    "scale:check": "node scripts/scaleCheck.js",
    "dr:run": "node scripts/disasterRecovery.js",
    "audit:rollup": "node scripts/rollupAuditLogs.js"
  },
  "keywords": [
    "express",
    "mongoose",
    "tifto",
    "multivendor",
    "food-delivery"
  ],
  "author": "Tifto Platform",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "firebase-admin": "^12.1.0",
    "morgan": "^1.10.0",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.13.0",
    "@sentry/node": "^7.115.0",
    "@logtail/node": "^0.5.4",
    "@logtail/winston": "^0.5.4",
    "prom-client": "^15.1.1",
    "node-fetch": "^3.3.2",
    "@socket.io/redis-adapter": "^8.2.0",
    "ioredis": "^5.4.1",
    "@aws-sdk/client-s3": "^3.645.0",
    "@aws-sdk/lib-storage": "^3.645.0",
    "@aws-sdk/client-secrets-manager": "^3.645.0",
    "@aws-sdk/client-cloudwatch": "^3.645.0",
    "@aws-sdk/s3-request-presigner": "^3.645.0",
    "archiver": "^6.0.1",
    "unzipper": "^0.11.0",
    "bson": "^6.8.0",
    "stripe": "^14.23.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "mongodb-memory-server": "^9.0.3",
    "artillery": "^2.0.1",
    "open-cli": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

